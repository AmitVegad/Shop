<%- include('header') %>
<div class="container">
  <div class="row">
    <h1>Product Lists</h1>
    <br>
    <table class="table table-striped table-primary">
      <thead>
        <tr>
          <th>Category ID</th>
          <th>Product ID</th>
          <th>Category Name</th>
          <th>Product Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if(records.length>0){
            records.forEach(function(row){
           
            %>
        <tr>
          <td><%= row.category_id %></td>
          <td><%= row.product_id %></td>
          <td><%= row.category_name %></td>
          <td><%= row.product_name %></td>
          <td>
            <button type="button" class="btn btn-info btn-xs" data-toggle="modal"
              data-target="#myModal<%= row._id %>"><i class="fa fa-eye"></i></button>
            <a class="btn btn-primary btn-xs" href="/editproduct/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
            <a class="btn btn-danger btn-xs" href= "/editproduct/delete/<%= row._id %>" 
              onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a>
          </td>
        </tr>
        
        <div class="modal fade" id="myModal<%= row._id %>" role="dialog">
          <div class="modal-dialog">

            
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <label for="username" class="col-md-3 control-label">Product ID:</label>
                <h5 class="modal-title"><%= row.product_id %></h5>
              </div>
              <div class="modal-body">
                <label for="username" class="col-md-3 control-label">Product Name:</label>
                <h5 class="modal-title"><%= row.product_name %></h5>
              </div>
              <div class="modal-body">
                <label for="username" class="col-md-3 control-label">Product Details:</label>
                <h5 class="modal-title"> <%- row.product_detail %></h5>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>

          </div>
        </div>
        <%    
          })} %>
      </tbody>
    </table>
    
   

  </div>
</div>
<%- include('footer') %>