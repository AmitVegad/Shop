<%- include('header') %>
<div class="container">
    <div class="row">

        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">

                <div class="panel-heading">
                    <div class="panel-title"> Add New Product</div>
                </div>

                <div class="panel-body">
                    <form action="/addnewproduct" id="passwordform" class="form-horizontal" method="post" role="form">
                       
                        <% if(success !=''){%>
                        <p style="text-align: center;color:green;"><%= success %></p>
                        <% } %>

                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Category ID</label>
                            <div class="col-md-9">
                                <input type="textbox" class="form-control" name="cat_id"
                                    placeholder="Enter Your Category ID">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Category Name</label>
                            <div class="col-md-9">
                                <input type="textbox" class="form-control" name="cat_name"
                                    placeholder="Enter Your Category Name">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Product ID</label>
                            <div class="col-md-9">
                                <input type="textbox" class="form-control" name="product_id"
                                    placeholder="Enter Your Product ID">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Product Name</label>
                            <div class="col-md-9">
                                <input type="textbox" class="form-control" name="product_name"
                                    placeholder="Enter Your Product Name">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Product Details</label>
                            <div class="col-md-9">
                                <textarea class="form-control" name="product_details" rows="5"
                                    placeholder="Enter Your Product Details"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" name="submit" value="Add Product" class="btn btn-primary">
                            </div>
                        </div>

                        <p><a href="/viewallproduct">View All Product Lists</a></p>




                    </form>
                </div>
            </div>




        </div>
    </div>
</div>

<%- include('footer')%>